modules = ["web", "python-3.11", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cargo", "freetype", "glibcLocales", "lcms2", "libiconv", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "openssl", "pkg-config", "postgresql", "rustc", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Document Management System"

[[workflows.workflow]]
name = "Document Management System"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Document Management System - Port 8000"
author = 47623307
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv run python -c \"import os; os.environ['FLASK_RUN_PORT'] = '8000'; exec(open('run.py').read())\""

[[workflows.workflow]]
name = "Migrar e Executar"
author = 47623307
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python migrate_db_complete.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run.py"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 42379
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "--reuse-port", "main:app"]
